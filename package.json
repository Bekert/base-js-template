{
	"name": "base-js-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"commit": "cz",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"eslint:check": "eslint .",
		"lint": "npm run eslint:check && npm run prettier:check",
		"lint:fix": "npm run eslint:check && npm run prettier:fix",
		"prepare": "husky",
		"start": "node src/index.js",
		"dev": "nodemon src/index.js"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{html,md,json,yml,yaml,js,css,scss}": "npm run lint:fix"
	},
	"prettier": "./configs/formatting/.prettierrc.json",
	"eslintConfig": {
		"extends": [
			"./configs/linting/.eslintrc.json"
		]
	},
	"babel": {
		"extends": "./configs/linting/.babelrc.json"
	},
	"devDependencies": {
		"@babel/core": "^7.24.4",
		"@babel/eslint-parser": "^7.24.1",
		"@babel/plugin-proposal-json-modules": "^7.24.3",
		"@commitlint/cli": "^19.2.2",
		"@commitlint/config-conventional": "^19.2.2",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.57.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nodemon": "^3.1.0",
		"prettier": "^3.2.5"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/Bekert/project-base.git"
	},
	"author": "Bekert",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Bekert/project-base/issues"
	},
	"homepage": "https://github.com/Bekert/project-base"
}
